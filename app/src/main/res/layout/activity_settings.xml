<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:title="@string/settings" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_large"
                app:cardElevation="@dimen/elevation_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <TextView
                        android:id="@+id/ttsSectionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_section_tts"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

                    <TextView
                        android:id="@+id/ttsStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="@string/tts_status_ready"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchUseYandex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="@string/settings_use_yandex" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/voiceInputLayout"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:hint="@string/settings_voice">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/voiceDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="@string/settings_volume" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/volumeSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:value="1.0"
                        android:valueFrom="0"
                        android:valueTo="1"
                        android:stepSize="0.01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="@string/settings_rate" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/rateSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:value="1.0"
                        android:valueFrom="0.1"
                        android:valueTo="2"
                        android:stepSize="0.01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="@string/settings_pitch" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/pitchSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:value="1.0"
                        android:valueFrom="0.5"
                        android:valueTo="2"
                        android:stepSize="0.01" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonTest"
                            style="@style/Widget.LinkaType.Button.Tonal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_small"
                            android:layout_weight="1"
                            android:text="@string/settings_test_tts"
                            app:icon="@drawable/ic_baseline_volume_up_24"
                            app:iconGravity="textStart"
                            app:iconPadding="@dimen/spacing_small" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonStop"
                            style="@style/Widget.LinkaType.Button.Outlined"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_small"
                            android:layout_weight="1"
                            android:text="@string/settings_stop_tts"
                            app:icon="@drawable/ic_baseline_clear_24"
                            app:iconGravity="textStart"
                            app:iconPadding="@dimen/spacing_small" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonPlayLast"
                            style="@style/Widget.LinkaType.Button.Outlined"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_play_last"
                            app:icon="@drawable/ic_baseline_play_arrow_24"
                            app:iconGravity="textStart"
                            app:iconPadding="@dimen/spacing_small" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/elevation_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <TextView
                        android:id="@+id/cacheSectionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_section_cache"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

                    <TextView
                        android:id="@+id/cacheInfoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchCacheEnabled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="@string/settings_cache_enabled" />

                    <TextView
                        android:id="@+id/cacheLimitLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="@string/settings_cache_limit" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/cacheLimitSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:value="2048"
                        android:valueFrom="100"
                        android:valueTo="10000"
                        android:stepSize="1" />

                    <TextView
                        android:id="@+id/cacheLimitValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonClearCache"
                            style="@style/Widget.LinkaType.Button.Tonal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_small"
                            android:layout_weight="1"
                            android:text="@string/settings_clear_cache"
                            app:icon="@drawable/ic_baseline_clear_24"
                            app:iconGravity="textStart"
                            app:iconPadding="@dimen/spacing_small" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonRefreshCache"
                            style="@style/Widget.LinkaType.Button.Outlined"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_refresh_cache"
                            app:icon="@drawable/ic_baseline_refresh_24"
                            app:iconGravity="textStart"
                            app:iconPadding="@dimen/spacing_small" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
