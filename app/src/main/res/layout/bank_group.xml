<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bank_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:transitionName="@string/transition_bank_card"
        app:cardElevation="@dimen/elevation_small"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/bank_toolbar"
                style="@style/Widget.LinkaType.Toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_small"
                android:theme="@style/ThemeOverlay.LinkaType.Toolbar"
                app:contentInsetStartWithNavigation="0dp"
                app:navigationIconTint="?attr/colorOnPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:titleTextColor="?attr/colorOnPrimary"
                app:subtitleTextColor="?attr/colorOnPrimary" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:padding="@dimen/spacing_small"
                android:scrollbars="none"
                android:layoutAnimation="@anim/layout_animation_fade_in" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
